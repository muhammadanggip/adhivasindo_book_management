            "post": {
                "tags": [
                    "Book Loans"
                ],
                "summary": "Create a new book loan",
                "description": "Create a new book loan for a user",
                "operationId": "adca2cb247c9ae512fe67c9b65222ee5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id",
                                    "book_id"
                                ],
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "book_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "expected_return_at": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-01-22T10:30:00.000000Z"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
